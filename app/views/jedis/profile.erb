<h1>Welcome back, <%= @jedi.name %>!</h1>

<img src="<%= @jedi.image_url %>" alt="jedi avatar">
<h2><%= @jedi.username %></h1>
<h3>My Prestige:</h2>
<h4><%= @jedi.prestige.name %></h3>
<h2>My Posts:</h2>
<% if @jedi.posts.count > 0 %>
    <% @jedi.posts.each do |post| %>
        <div class="card">
            <div class"card-header"><%= post.title %></div>
            <div class="card-body">
                <div class="post-body-content"><%= post.body %></div>
                <h3>Comments about <%= post.title %>:</h>
                <% if post.comments.count > 0 %>
                    <% post.comments.each do |comment| %>
                        <div class="card bg-secondary">
                            <div class="card-body">
                                <p><a href="/jedi/<%= comment.jedi.id %>"><%= comment.jedi.name %></a> said:</p>
                                <p><%= comment.body %></p>
                            </div>
                        </div>
                    <% end %>
                <% else %>
                    <p>No comments, yet.</p>
                <% end %>
            </div>
        </div>
    <% end %>
<% else %>
    <p>You haven't begun your posting journey, yet.</p>
<% end %>