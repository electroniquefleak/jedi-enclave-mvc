<img src="<%= @jedi.image_url %>" alt="jedi avatar">
<h1><%= @jedi.username %></h1>
<h2>My Prestige:</h2>
<h3><%= @jedi.prestige.name %></h3>
<h2>My Posts:</h2>
<% if @jedi.posts.count > 0 %>
    <% @jedi.posts.each do |post| %>
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
        <p<%= post.body %></p>
        <h3>Comments about <%= post.title %>:</h>
        <% if post.comments.count > 0 %>
            <% post.comments.each do |comment| %>
                <p><a href="/jedi/<%= comment.jedi.id %>"><%= comment.jedi.name %></a> said:</p>
                <p><%= comment.body %></p>
            <% end %>
        <% else %>
            <p>No comments, yet.</p>
        <% end %>

    <% end %>
<% else %>
    <p>You haven't begun your posting journey, yet.</p>
<% end %>