<h1><%= @jedi.username %></h1>
<h2>Prestige:</h2>
<h3><%= @jedi.prestige.name %></h3>
<h2><%= @jedi.username%>'s Posts:</h2>
<% if @jedi.posts.count > 0 %>
    <% @jedi.posts.each do |post| %>
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
        <p><%= post.body %></p>
    <% end %>
<% else %>
    <p><%= @jedi.username %> hasn't begun posting, yet.</p>
<% end %>